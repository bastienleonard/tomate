<?xml version="1.0" encoding="utf-8"?>
<com.bastienleonard.tomate.ExclusiveLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exclusive_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/loading" />
    <android.support.v4.widget.SwipeRefreshLayout android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp" />
    </android.support.v4.widget.SwipeRefreshLayout>
</com.bastienleonard.tomate.ExclusiveLayout>