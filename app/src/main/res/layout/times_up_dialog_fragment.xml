<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:minWidth="280dp"
    android:paddingTop="24dp"
    android:paddingBottom="24dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/podomoro_ended_title"
        android:paddingBottom="20dp"
        android:paddingLeft="24dp"
        android:textSize="24sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <TextView android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/done"
            style="@style/SimpleDialogItem" />
        <TextView android:id="@+id/short_break"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/short_break"
            style="@style/SimpleDialogItem" />
        <TextView android:id="@+id/long_break"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/long_break"
            style="@style/SimpleDialogItem" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="@string/dismiss_note"
        android:textStyle="italic" />
</LinearLayout>